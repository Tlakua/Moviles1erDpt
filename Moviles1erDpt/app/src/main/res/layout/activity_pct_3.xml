<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".Practicas.Pct_3">

    <TextView
        android:text="Practica 3: Interfaz Noticia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5sp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_nomNot"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Titulo  noticia"
            android:textColor="#ffffff"
            android:background="#000000" />

        <TableLayout
            android:padding="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#9e9e9e" >

            <TableRow>

                <LinearLayout
                    android:layout_width="110dp"
                    android:layout_height="173dp"
                    android:background="#ffffff"
                    android:layout_margin="2sp"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:text="PUBLICADO POR:"
                        android:textStyle="bold"
                        android:gravity="left"/>

                    <TextView
                        android:id="@+id/tv_por"
                        android:layout_width="110dp"
                        android:layout_height="35dp"
                        android:text="Nobre del publicador" />

                    <TextView
                        android:layout_width="110dp"
                        android:layout_height="35dp" />

                    <TextView
                        android:layout_width="110dp"
                        android:layout_height="30dp"
                        android:text="El:"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_fecha"
                        android:layout_width="110dp"
                        android:layout_height="35dp"
                        android:text="fecha publicado" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_noticia"
                    android:layout_width="110dp"
                    android:layout_height="173dp"
                    android:layout_margin="2sp"
                    android:text="Aqui debera ir la noticia"
                    android:background="#ffffff"
                    android:orientation="vertical" />

            </TableRow>
        </TableLayout>
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cambiar Noticia"
        android:onClick="btn_cambiar" />

</LinearLayout>